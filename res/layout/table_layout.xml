                <TextView
                    android:id="@+id/diisel_6"
                    android:gravity="center|center_horizontal|center_vertical|clip_horizontal"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:typeface="serif" />
            </TableRow>

            

            <TableRow
                android:id="@+id/tableRow9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp" >

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/fiveplus" />

                <TextView
                    android:id="@+id/bens95_7"
                    android:gravity="center|center_horizontal|center_vertical|clip_horizontal"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/bens98_7"
                    android:gravity="center|center_horizontal|center_vertical|clip_horizontal"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/diisel_7"
                    android:gravity="center|center_horizontal|center_vertical|clip_horizontal"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:typeface="serif" />
            </TableRow>
        </TableLayout>
    </ScrollView>

    <EditText
        android:id="@+id/liters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/scrollView1"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@+id/calculate"
        android:layout_toLeftOf="@+id/calculate"
        android:ems="10"
        android:hint="@string/hint"
        android:inputType="number" >

    </EditText>

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:onClick="reset"
        android:text="@string/reset" />

    <Button
        android:id="@+id/calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/reset"
        android:onClick="calculatePrices"
        android:text="@string/calculate" />

</RelativeLayout>